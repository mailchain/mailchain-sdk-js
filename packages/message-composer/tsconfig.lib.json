{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "esnext",
		"types": ["node"],
		"target": "ES2017",
		"noEmit": false,
		"declaration": true,
		"incremental": false,
		"lib": ["ES2017", "es7", "es6", "dom"],
		"sourceMap": false,
		"esModuleInterop": true, // Eases ESM support
		"allowSyntheticDefaultImports": true
	},
	"include": ["**/*.ts", "jest.config.cjs"],
	"exclude": ["jest.config.cjs", "**/*.test.ts"]
}
