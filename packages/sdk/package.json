{
	"name": "@mailchain/sdk",
	"version": "0.18.1",
	"description": "Mailchain sdk for sending messages to web3 addresses",
	"license": "Apache-2.0",
	"author": {
		"name": "Mailchain",
		"email": "support@mailchain.co",
		"url": "https://mailchain.com/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mailchain/mailchain-sdk-js.git",
		"directory": "sdk"
	},
	"bugs": {
		"url": "https://github.com/mailchain/mailchain-sdk-js/issues"
	},
	"homepage": "https://docs.mailchain.com/developer",
	"dependencies": {
		"@mailchain/addressing": "0.18.1",
		"@mailchain/crypto": "0.18.1",
		"@mailchain/encoding": "0.18.1",
		"@mailchain/internal": "0.18.1",
		"@mailchain/keyring": "0.18.1"
	},
	"engines": {
		"node": ">=15.0.0"
	},
	"scripts": {
		"build": "cross-env NODE_ENV=production rollup -c --bundleConfigAsCjs",
		"test": "run -T jest --passWithNoTests",
		"lint:test": "yarn run -T eslint --ext js,ts,tsx src",
		"lint:fix": "yarn run -T eslint --fix --ext js,ts,tsx src"
	},
	"devDependencies": {
		"@peculiar/webcrypto": "^1.4.0"
	},
	"typesVersions": {
		"*": {
			"internal": [
				"./types/internal/index.d.ts"
			]
		}
	},
	"exports": {
		".": {
			"import": "./browser/index.js",
			"require": "./node/index.js",
			"types": "./types/index.d.ts"
		},
		"./internal": {
			"types": "./types/internal/index.d.ts",
			"import": "./browser/internal/index.js",
			"require": "./node/internal/index.js"
		}
	}
}
